<Window x:Class="MapEditor.SelectTexture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectTexture" MinHeight="300" MinWidth="300" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Margin="5" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="btnOK" Margin="2,2,5,2" Width="80" HorizontalAlignment="Right" Content="Ok" />
            <Button Grid.Column="1" Name="btnCancel" Margin="2,2,5,2" Width="80" HorizontalAlignment="Left" Content="Annuler" />
        </Grid>
    </Grid>
</Window>
