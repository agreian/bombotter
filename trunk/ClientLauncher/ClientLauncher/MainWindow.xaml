<Window x:Class="BomberLoutre.Client.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="200" MinWidth="150" MaxHeight="200" MaxWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="10, 5, 10, 5" Content="Partie solo" />
        <Button Grid.Row="1" Margin="10, 5, 10, 5" Content="Partie multijoueur" />
        <Button Grid.Row="2" Margin="10, 5, 10, 5" Content="Options" />
        <Button Grid.Row="3" Margin="10, 5, 10, 5" Content="Quitter" />
    </Grid>
</Window>
