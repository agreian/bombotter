<Window x:Class="BomberLoutre.Client.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="200" MinWidth="150" MaxHeight="200" MaxWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Name="btnSolo" Margin="10, 5, 10, 5" Content="Partie solo" Click="btnSolo_Click" />
        <Button Grid.Row="1" Name="btnMulti" Margin="10, 5, 10, 5" Content="Partie multijoueur" Click="btnMulti_Click" />
        <Button Grid.Row="2" Name="btnOptions" Margin="10, 5, 10, 5" Content="Options" Click="btnOptions_Click" />
        <Button Grid.Row="3" Name="btnQuitter" Margin="10, 5, 10, 5" Content="Quitter" Click="btnQuitter_Click" />
    </Grid>
</Window>
